
#include <iostream>

int main() {
	setlocale(LC_ALL, "RU");
	using namespace std;


	int menu;	 // меню
	int num1;	 //высота
	int num2;	 //ширина
	char tex;	 //текстура
	bool f = false;
	int num = 0;

	cout << "Гиометрические фигуры" << endl;
	cout << "[1] Линия" << endl;
	cout << "[2] Квадрат" << endl;
	cout << "[3] Прямоугольник" << endl;
	cout << "[4] Треугольник" << endl;
	cout << "[5] Решетка" << endl;
	cout << "[6] Крестик" << endl;
	cout << "[7] Плюс" << endl;
	cout << "[8] Ромб" << endl;
	cout << "[9] Змейка" << endl;
	cout << "[10] Рекурсивный квадрат" << endl;
	cout << "[11] Выход" << endl;
	cout << "Выберите фигуру: ";
	cin >> menu;

	switch (menu) {
		//Линия
	case 1: {
		system("cls");
		cout << "Линия" << endl;
		cout << "[1] Горизонтальная" << endl;
		cout << "[2] Вертикальная" << endl;
		cout << "Выберете тип: ";
		cin >> menu;
		switch (menu) {
			//горизонтальная
		case 1: {
			cout << "длина: ";
			cin >> num1;

			cout << "текстура: ";
			cin >> tex;

			while (num != num1) {
				cout << tex;
				num++;
			}

		}
			  //вертикальная
		case 2: {
			cout << "длина: ";
			cin >> num1;

			cout << "текстура: ";
			cin >> tex;

			while (num != num1) {
				cout << tex << endl;
				num++;
			}
		}
		}
		break;
	}
		  //квадрат
	case 2: {
		system("cls");
		cout << "квадрат" << endl;
		cout << "[1]заполненый" << endl << "[2]пустой" << endl;
		cout << "выберете тип: ";
		cin >> menu;
		switch (menu) {
		case 1: {
			system("cls");
			cout << "заполненый квадрат" << endl;
			cout << "размер: ";
			cin >> num1;
			cout << "текстура: ";
			cin >> tex;
			for (int y = 0; y < num1; y++) {
				for (int x = 0; x < num1; x++) {
					cout << tex << " ";
				}
				cout << endl;
			}
			break;
		}
		case 2: {
			system("cls");
			cout << "пустой квадрат" << endl;
			cout << "размер: ";
			cin >> num1;
			cout << "текстура: ";
			cin >> tex;
			for (int y = 0; y < num1; y++) {
				for (int x = 0; x < num1; x++) {
					if (x == 0 || x == num1 - 1 || y == 0 || y == num1 - 1) {
						cout << tex << " ";
					}
					else {
						cout << "  ";
					}
				}
				cout << endl;
			}
			break;
		}
		}
		break;
	}
		  //Прямоугольник
	case 3: {
		system("cls");
		cout << "прямоугольник" << endl;
		cout << "[1]заполненый" << endl << "[2]пустой" << endl;
		cout << "выберете тип: ";
		cin >> menu;
		switch (menu) {
		case 1: {
			system("cls");
			cout << "заполненый прямоугольник" << endl;
			cout << "высота: ";
			cin >> num1;
			cout << "ширина: ";
			cin >> num2;
			cout << "текстура: ";
			cin >> tex;
			for (int y = 0; y < num1; y++) {
				for (int x = 0; x < num2; x++) {
					cout << tex << " ";
				}
				cout << endl;
			}
			break;
		}
		case 2: {
			system("cls");

			cout << "пустой прямоугольник" << endl;
			cout << "высота: ";
			cin >> num1;
			cout << "ширина: ";
			cin >> num2;
			cout << "текстура: ";
			cin >> tex;
			for (int y = 0; y < num1; y++) {
				for (int x = 0; x < num2; x++) {
					if (x == 0 || x == num2 - 1 || y == 0 || y == num1 - 1) {
						cout << tex << " ";
					}
					else {
						cout << "  ";
					}
				}
				cout << endl;
			}
			break;
		}
		}
		break;
	}
		  //Треугольник
	case 4: {
		system("cls");

		cout << "треугольник" << endl;
		cout << "[1]заполненый" << endl << "[2]пустой" << endl;
		cout << "выберете тип: ";
		cin >> menu;
		switch (menu) {
		case 1: {
			system("cls");

			cout << "заполненый треугольник" << endl;
			cout << "размер: ";
			cin >> num1;
			cout << "текстура: ";
			cin >> tex;

			for (int y = 0; y < num1; y++) {
				for (int x = 0; x < num1; x++) {
					if (x <= num1 / 2 + y and x >= num1 / 2 - y and y <= num1 / 2) {
						cout << tex << " ";
					}
					else {
						cout << "* ";
					}
				}
				cout << endl;
			}

			break;
		}
		case 2: {
			system("cls");

			cout << "пустой треугольник" << endl;
			cout << "размер: ";
			cin >> num1;
			cout << "текстура: ";
			cin >> tex;

			for (int y = 0; y < num1; y++) {
				for (int x = 0; x < num1; x++) {
					if (x == num1 / 2 + y || x == num1 / 2 - y || y == num1 / 2) {
						cout << tex << " ";
					}
					else {
						cout << "* ";
					}
				}
				cout << endl;
			}

			break;
		}
		}
		break;
	}
		  //Решетка
	case 5: {
		system("cls");

		cout << "Решетка" << endl;
		cout << "размер: ";
		cin >> num1;
		cout << "текстура: ";
		cin >> tex;

		for (int y = 0; y < num1; y++) {
			for (int x = 0; x < num1; x++) {
				if (x == num1 / 3 - 1 || x == num1 / 3 * 2 - 1 || x == num1 / 3 * 3 - 1 || y == num1 / 3 - 1 || y == num1 / 3 * 2 - 1 || y == num1 / 3 * 3 - 1) {
					cout << tex << " ";
				}
				else {
					cout << "* ";
				}
			}
			cout << endl;
		}
		break;
	}
		  //Крестик
	case 6: {
		system("cls");

		cout << "Кестик" << endl;
		cout << "размер: ";
		cin >> num1;
		cout << "текстура: ";
		cin >> tex;

		for (int y = 0; y < num1; y++) {
			for (int x = 0; x < num1; x++) {
				if (x == num1 - y - 1 || x == y) {
					cout << tex << " ";
				}
				else {
					cout << "* ";
				}
			}
			cout << endl;
		}
		break;
	}
		  //Плюс
	case 7: {
		system("cls");

		cout << "Плюс" << endl;
		cout << "размер: ";
		cin >> num1;
		cout << "текстура: ";
		cin >> tex;

		for (int y = 0; y < num1; y++) {
			for (int x = 0; x < num1; x++) {
				if (x == num1 / 2 || y == num1 / 2) {
					cout << tex << " ";
				}
				else {
					cout << "* ";
				}
			}
			cout << endl;
		}
		break;
	}
		  //Ромб
	case 8: {
		system("cls");

		cout << "Ромб" << endl;
		cout << "[1]заполненый" << endl << "[2]пустой" << endl;
		cout << "выберете тип: ";
		cin >> menu;
		switch (menu) {
		case 1: {
			system("cls");

			cout << "заполненый ромб" << endl;
			cout << "размер: ";
			cin >> num1;
			cout << "текстура: ";
			cin >> tex;

			for (int y = 0; y < num1; y++) {
				for (int x = 0; x < num1; x++) {
					if (x <= num1 / 2 + y && x >= num1 / 2 - y && y <= num1 / 2 + x && y <= num1 / 2 + num1 - x - 1) {
						cout << tex << " ";
					}
					else {
						cout << "* ";
					}
				}
				cout << endl;
			}
			break;
		}
		case 2: {
			system("cls");

			cout << "пустой ромб" << endl;
			cout << "размер: ";
			cin >> num1;
			cout << "текстура: ";
			cin >> tex;

			for (int y = 0; y < num1; y++) {
				for (int x = 0; x < num1; x++) {
					if (x == num1 / 2 + y || x == num1 / 2 - y || y == num1 / 2 + x || y == num1 / 2 + num1 - x - 1) {
						cout << tex << " ";
					}
					else {
						cout << "* ";
					}
				}
				cout << endl;
			}
			break;
		}
		}
		break;
	}
		  //Змейка
	case 9: {
		system("cls");

		cout << "Змейка" << endl;
		cout << "размер: ";
		cin >> num1;
		cout << "текстура: ";
		cin >> tex;

		for (int y = 0; y < num1; y++) {
			for (int x = 0; x < num1; x++) {
				if (y % 2 == 0) {
					cout << "\x1b[92m" << tex << "\x1b[0m ";
				}
				else if (f == true && x == num1 - 1) {
					cout << "\x1b[92m" << tex << "\x1b[0m ";
				}
				else if(f == false && x == 0) {
					cout << "\x1b[92m" << tex << "\x1b[0m ";
				}
				else {
					cout << "\x1b[90m*\x1b[0m ";
				}
			}
			if (y != 0 && y % 2 == 0) {
				f = !f;
			}
			cout << endl;
		}
		break;
	}
		  //Рекурсивный квадрат
	case 10: {
		system("cls");
		cout << "рекурсивный квадрат" << endl;
		cout << "размер: ";
		cin >> num1;
		cout << "текстура: ";
		cin >> tex;
		for (int y = 0; y < num1; y++) {
			for (int x = 0; x < num1; x++) {
				 
			}
			cout << endl;
		}
		break;
	}
		   //Выход
	case 11: {
		return 0;
	}
	default: {
		cout << "нет такого действия";
	}
	}
	return 0;
}
