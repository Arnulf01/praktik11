#include <iostream>

int main() {
	setlocale(LC_ALL, "RU");
	using namespace std;


	int menu;	 // меню
	int len;	 //длина
	int wid;	 //ширина
	char tex;	 //текстура
	int num = 0;

	cout << "Гиометрические фигуры" << endl;
	cout << "[1] Линия" << endl;
	cout << "[2]Квадрат" << endl; 
	cout << "[3]Прямоугольник" << endl;
	cout << "[4]Треугольник" << endl;
	cout << "[5]Решетка" << endl;
	cout << "[6]Крестик" << endl;
	cout << "[7]Плюс" << endl;
	cout << "[8]Ромб" << endl;
	cout << "[9]Змейка" << endl;
	cout << "[10]Рекурсивный квадрат" << endl;
	cout << "[11]Выход" << endl;
	cout << "Выберите фигуру: ";
	cin >> menu;

	switch (menu) {
		//Линия
	case 1: {
		system("cls");
		cout << "Линия" << endl;
		cout << "[1] Горизонтальная" << endl;
		cout << "[2] Вертикальная" << endl;
		cout << "Выберете тип: ";
		cin >> menu;
		switch (menu) {
			//горизонтальная
		case 1: {
			cout << "длина: ";
			cin >> len;

			cout << "текстура: ";
			cin >> tex;

			while (num != len) {
				cout << tex;
				num++;
			}

		}
			  //вертикальная
		case 2: {
			cout << "длина: ";
			cin >> len;

			cout << "текстура: ";
			cin >> tex;

			while (num != len) {
				cout << tex << endl;
				num++;
			}
		}
		}
	}
		  //квадрат
	case 2: {
		while (true) {
			cout << " 42 ";
		}
	}
		  //Прямоугольник
	case 3: {

	}
		  //Треугольник
	case 4: {

	}
		  //Решетка
	case 5: {

	}
		  //Крестик
	case 6: {

	}
		  //Плюс
	case 7: {

	}
		  //Ромб
	case 8: {

	}
		  //Змейка
	case 9: {

	}
		  //Рекурсивный квадрат
	case 10: {

	}
		  //Выход
	case 11: {
		return 0;
	}
	default: {
		cout << "нет такого действия";
	}
	}
	return 0;
}
